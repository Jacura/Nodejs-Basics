<html>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>About</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
     
    <form class="container">
        <div class="form-group row">
          <label for="blog_title" class="col-sm-2 col-form-label">Blog Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="title" required>
          </div>
        </div>
        <div class="form-group row">
            <label for="blog_snippet" class="col-sm-2 col-form-label">Blog Snippet</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="snippet" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="body" class="col-sm-2 col-form-label">Blog Body</label>
            <div class="col-sm-10">
              <textarea type="text" class="form-control" id="body" required></textarea>
            </div>
        </div>
        <button>Submit</button>
    </form>
  </body>
</html>
